{
  "name": "pkg-groups",
  "main": "./lib/pkg-groups",
  "version": "0.0.3",
  "description": "Define groups of packages, and enable/disable them.",
  "keywords": [
    "package",
    "configuration"
  ],
  "activationCommands": {
    "atom-workspace": "pkg-groups:toggle"
  },
  "repository": "https://github.com/alflanagan/atom-pkg-groups",
  "license": "MIT",
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "dependencies": {
    "babel-plugin-transform-jsx": "^2.0.0",
    "etch": "^0.12.7",
    "immutable": "~3.8.1",
    "log4js": "^2.4.1",
    "ramda": "^0.25.0"
  },
  "deserializers": {
    "pkg-groups/PkgGroupsView": "deserializePkgGroupsView",
    "pkg-groups/PkgGroupsModel": "deserializePkgGroupsModel"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "standard": "^10.0.3"
  },
  "scripts": {
    "test": "standard;  apm-beta test -p /usr/bin/atom-beta",
    "make-tar": "rm -f pkg-groups.tar pkg-groups.tar.gz; tar cf pkg-groups.tar $(find . -name .git -prune -o -name node_modules -prune -o -name docs -prune -o -name babel-transpile -prune -o -type f -print); gzip pkg-groups.tar",
    "make-docs": "rm -rf docs/*; esdoc"
  },
  "standard": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jasmine": true,
      "browser": true,
      "node": true
    },
    "globals": [
      "atom",
      "waitsForPromise"
    ],
    "rules": {
      "no-global-assign": "error"
    }
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-jsx",
      "transform-class-properties"
    ]
  }
}
